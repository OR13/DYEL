{
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Run Tests",
            "type": "node",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--recursive",
                "api"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "production"
            }
        }
    ]
}